import cp.

main([Filename]) =>
    cl(Filename),
    instance(N, L, D, W),
    seesaw(N, L, D, W, Positions),
    solve(Positions),
    println(Positions).

seesaw(N, L, D, W, Positions) =>
    Positions = new_list(N),
    Positions :: -L div 2..L div 2, % we assume for simplicity that L is even
    serialized(Positions, [D : I in 1..N]),
    scalar_product(Positions, W, 0),
    
    % symmetry breaking
    Positions[1] #<= 0.

        